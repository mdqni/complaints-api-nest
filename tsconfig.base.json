{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@libs/*": ["libs/*"],
      "@apps/*": ["apps/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
